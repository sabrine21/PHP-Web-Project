{% extends 'base.html.twig' %}

{# ... #}

{% block stylesheets %}
    {{ parent() }}
    {# Include Bootstrap CSS here if not already included #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/united/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/united/variables.min.scss">
   
    <style>
        .login-container {
            width: 300px;
            margin-top: 8rem; /* Add margin to separate from the navbar */
            height: 100vh;
            justify-content: center;
            align-items: center;
            margin-left: 35rem;
        }

        .form-outline {
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="login-container">
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-outline">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>

            <div class="form-outline">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
        </form>
    </div>
{% endblock %}
